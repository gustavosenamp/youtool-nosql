@model List<youtool_nosql.Models.Comment>

@{
    ViewData["Title"] = "Comentários do YouTube";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">Busque o nome de um Canal no YouTube</h2>
                <p class="text-muted">Digite o nome ou ID do canal para buscar os comentários</p>
            </div>

            @if (TempData["Mensagem"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Mensagem"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Erro"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Erro"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Canal" method="get">
                        <div class="mb-3">
                            <label for="termo" class="form-label fw-semibold">Buscar Canal:</label>
                            <input type="text" name="termo" id="termo" class="form-control" placeholder="Nome ou ID do canal" required />
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-success">
                                Buscar Canal
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
