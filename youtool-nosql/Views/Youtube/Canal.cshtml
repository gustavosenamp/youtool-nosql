@model youtool_nosql.Models.ChannelInfo
@{
    ViewData["Title"] = "Informações do Canal";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container my-5">
    <div class="card shadow">
        <img src="@Model.BannerUrl" class="card-img-top" alt="Banner do Canal" style="max-height: 250px; object-fit: cover;">
        <div class="card-body">
            <div class="d-flex align-items-center mb-3">
                <img src="@Model.UrlImagem" class="rounded-circle me-3" style="width: 80px; height: 80px;">
                <div>
                    <h4 class="card-title">@Model.Nome</h4>
                    <p class="card-text text-muted">Criado em @Model.DataCriacao.ToString("dd/MM/yyyy")</p>
                </div>
            </div>

            <p><strong>Descrição:</strong> @Model.Descricao</p>
            <p><strong>País:</strong> @Model.Pais</p>
            <p><strong>Status:</strong> @Model.Status</p>
            <p><strong>Categorias:</strong> @string.Join(", ", Model.Categorias)</p>

            <div class="row mt-4">
                <div class="col-md-6">
                    <canvas id="graficoEstatisticas"></canvas>
                </div>
                <div class="col-md-6">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Inscritos</span><strong>@Model.Inscritos.ToString("N0")</strong>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Vídeos</span><strong>@Model.TotalVideos</strong>
                        </li>
                        <li class="list-group-item d-flex justify-content-between">
                            <span>Total de Visualizações</span><strong>@Model.VisualizacoesTotais.ToString("N0")</strong>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const ctx = document.getElementById('graficoEstatisticas').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Inscritos', 'Vídeos', 'Visualizações'],
            datasets: [{
                label: 'Estatísticas do Canal',
                data: [@Model.Inscritos, @Model.TotalVideos, @Model.VisualizacoesTotais],
                backgroundColor: ['#0d6efd', '#198754', '#ffc107']
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false },
                title: { display: true, text: 'Resumo do Canal' }
            }
        }
    });
</script>
