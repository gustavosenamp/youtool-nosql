@model youtool_nosql.Models.ChannelInfo

@{
    ViewData["Title"] = "Informações do Canal";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container my-5">
    <div class="card shadow-lg border-0">
        <img src="@Model.BannerUrl" class="card-img-top" alt="Banner do Canal" style="max-height: 250px; object-fit: cover; border-top-left-radius: .5rem; border-top-right-radius: .5rem;">
        <div class="card-body p-4">

            <div class="d-flex align-items-center mb-4">
                <img src="@Model.UrlImagem" class="rounded-circle shadow" style="width: 90px; height: 90px; object-fit: cover; border: 2px solid #ddd;">
                <div class="ms-3">
                    <h3 class="mb-0">@Model.Nome</h3>
                    <small class="text-muted">Criado em @Model.DataCriacao.ToString("dd/MM/yyyy")</small>
                </div>
            </div>

            <div class="mb-4">
                <p><strong class="text-primary">Descrição:</strong> @Model.Descricao</p>
                <p><strong class="text-primary">País:</strong> @Model.Pais</p>
                <p><strong class="text-primary">Status:</strong> @Model.Status</p>
                <p><strong class="text-primary">Categorias:</strong> <span class="badge bg-secondary">@string.Join("</span> <span class=\"badge bg-secondary\">", Model.Categorias)</span></p>
            </div>

            <div class="row mt-4">
                <div class="col-md-6 mb-4 mb-md-0">
                    <canvas id="graficoEstatisticas" height="220"></canvas>
                </div>
                <div class="col-md-6">
                    <div class="list-group shadow-sm">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">Inscritos</span>
                            <span class="text-success fw-bold">@Model.Inscritos.ToString("N0")</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">Vídeos</span>
                            <span class="text-primary fw-bold">@Model.TotalVideos</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">Total de Visualizações</span>
                            <span class="text-warning fw-bold">@Model.VisualizacoesTotais.ToString("N0")</span>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    const ctx = document.getElementById('graficoEstatisticas').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Inscritos', 'Vídeos', 'Visualizações'],
            datasets: [{
                label: 'Estatísticas do Canal',
                data: [@Model.Inscritos, @Model.TotalVideos, @Model.VisualizacoesTotais],
                backgroundColor: ['#0d6efd', '#198754', '#ffc107']
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false },
                title: { display: true, text: 'Resumo do Canal' }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: { precision: 0 }
                }
            }
        }
    });
</script>
